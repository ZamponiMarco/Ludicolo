rule "StageIncreaseEffect"
    salience 40
when
    moveAction : MoveAction(moveAction.status == ActionStatus.FIRED, moveAction.move.containsSideEffect(SideEffectType.STAGE))
then
    Utility.helper(drools);
    SideEffectTarget target = moveAction.getMove().getSideEffectByType(SideEffectType.STAGE).getTarget();
    Map<Stat, Integer> stages = new HashMap<>();
    StageSideEffect stageSideEffect = ((StageSideEffect)moveAction.getMove().getSideEffectByType(SideEffectType.STAGE));
    stages.put(stageSideEffect.getTargetStat(), stageSideEffect.getNumberOfStages());
    if (target.equals(SideEffectTarget.TARGET)) {
        moveAction.getTarget().getCurrentPokemon().setStage(stages);
        update(moveAction.getTarget().getCurrentPokemon());
    } else {
        moveAction.getSource().getCurrentPokemon().setStage(stages);
        update(moveAction.getSource().getCurrentPokemon());
    }
end

