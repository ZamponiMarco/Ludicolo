rule "ItemActionFire"
when
    itemAction: ItemAction(itemAction.status == ActionStatus.READY_TO_FIRE)
then
    Utility.helper(drools);
    System.out.println("Item action fired");

    itemAction.setStatus(ActionStatus.FIRED);
    update(itemAction)
end

rule "SwapActionFire"

when
    swapAction: SwapAction(swapAction.status == ActionStatus.READY_TO_FIRE)
then
    Utility.helper(drools);
    System.out.println("Swap action fired");
    swapAction.setStatus(ActionStatus.FIRED);
    update(swapAction)
end



rule "PlayerLose"
    salience 110
when
     losingPlayer: Player(losingPlayer.areAllFainted())
     winningPlayer: Player(!winningPlayer.areAllFainted())
     leftAction: Action()
 then
     Utility.helper(drools);
     retract(leftAction);
end

